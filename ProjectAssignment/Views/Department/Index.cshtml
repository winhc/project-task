@model IEnumerable<ProjectAssignment.ViewModels.DepartmentViewModel>

@{
    ViewBag.Title = "Department List";
}

<div class="row">
    <div class="col-lg-10">
        <h2>Department List</h2>
    </div>
    <div class="col-lg-2">
        <h2 id="btnCreateDepartment" class="btn btn-primary"> <span class="glyphicon glyphicon-plus"></span> Create New </h2>
    </div>
</div>
<hr />
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@item.DepartmentName</h3>
                    <p>@item.Description</p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                    <!--@Html.ActionLink("Delete", "Delete", new { id = item.ID })-->
                </div>
            </div>
        </div>
    }
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnCreateDepartment').click(function () {
                var url = '@Url.Action("Create", "Department")';
                window.location.href = url;
            });
        });
    </script>
}
